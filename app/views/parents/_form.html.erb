<div class="modal inmodal" id="parentForm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title ng-scope">Add Parent</h4>
      </div>

      <form role="form" onsubmit="saveParent(); return false;">
        <div class="modal-body">
          <div id="formErrorDiv" style="display: none"></div>

          <input type="hidden" id="parent_id" name="parent_id">
          <div class="requiredMsg">All fields with <span>*</span> mark are required</div>

          <div class="row">
            <div class="col-xs-6 form-group">
              <label for="name">Name <span>*</span></label>
              <input class="form-control" type="text" name="name" id="name">
            </div>

            <div class="col-xs-6 form-group">
              <label for="username">Username <span>*</span></label>
              <input class="form-control" type="text" name="username" id="username">
            </div>
          </div>

          <div class="row" id="passwordFieldWrap">
            <div class="col-xs-6 form-group">
              <label for="password">Password <span>*</span></label>
              <input class="form-control" type="password" name="password" id="password">
            </div>

            <div class="col-xs-6 form-group">
              <label for="confirm_password">Confirm Password <span>*</span></label>
              <input class="form-control" type="password" name="confirm_password" id="confirm_password">
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6 form-group">
              <label for="email">Email <span>*</span></label>
              <input class="form-control" type="text" name="email" id="email">
            </div>

            <div class="col-xs-6 form-group">
              <label for="contact_number">Contact Number</label></label>
              <input class="form-control" type="text" name="contact_number" id="contact_number">
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6 form-group">
              <label for="address">Address</label>
              <input class="form-control" type="text" name="address" id="address">
            </div>

            <div class="col-xs-6 form-group">
              <label for="zipcode">Zip Code</label>
              <input class="form-control" type="text" name="zipcode" id="zipcode">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="text-center">
            <div class="btnLoaderWrap" id="parentFormSubmitBtn">
              <button type="submit" class="btn btn-primary submitButton">Add Parent</button>
              <div class="btnLoader">
                <div class="sk-spinner sk-spinner-three-bounce">
                  <div class="sk-bounce1"></div>
                  <div class="sk-bounce2"></div>
                  <div class="sk-bounce3"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="modal inmodal" id="assignedStudentForm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title ng-scope">Assign Children</h4>
      </div>

      <form role="form" onsubmit="saveRelatedStudents(); return false;">
        <div class="modal-body">
          <div id="childFormErrorDiv" style="display: none"></div>

          <div id="related_students">
              <div class="row relatedStudents">
                <div class="col-xs-6 form-group">
                  <label for="student">Child</label>
                  <select class="form-control">
                    <option value="">Select child</option>
                    <% @students.each do |d| %>
                        <option value="<%= d.id %>"><%= d.name %></option>
                    <% end %>
                  </select>
                </div>

                <div class="col-xs-5 form-group rPos">
                  <label for="username">Relation</label>
                  <input class="form-control" type="text">
                  <a href="javascript:void(0)" class="removeRow" onclick="removeStudentRow(this)"><i class="fa fa-close"></i></a>
                </div>
              </div>
          </div>
          <a href="javascript:void(0)" onclick="addStudentRow()">Add New</a>
        </div>

        <div class="modal-footer">
          <div class="text-center">
            <div class="btnLoaderWrap" id="parentFormSubmitBtn">
              <button type="submit" class="btn btn-primary submitButton">Assign Children</button>
              <div class="btnLoader">
                <div class="sk-spinner sk-spinner-three-bounce">
                  <div class="sk-bounce1"></div>
                  <div class="sk-bounce2"></div>
                  <div class="sk-bounce3"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>