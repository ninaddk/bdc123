<div class="modal inmodal" id="notificationForm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" style="width: 480px">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title ng-scope">Add Notification</h4>
      </div>

      <form role="form" onsubmit="savenotification(); return false;">
        <div class="modal-body">
          <div id="formErrorDiv" style="display: none"></div>

            <input type="hidden" id="notification_id" name="notification_id">
          <div class="requiredMsg">All fields with <span>*</span> mark are required</div>

          <div class="form-group">
                <label for="name">Name <span>*</span></label>
                <input class="form-control" type="text" name="name" id="name">
            </div>

          <% if @user_role == USER_ROLE_ADMIN %>
              <div class="form-group">
                <label for="day_care_center">Day Care Branch <span>*</span></label>
                <select class="form-control" name="day_care_center" id="day_care_center" >
                  <option value="">Select Day Care Branch</option>
                  <% @dayCareCenters.each do |d| %>
                      <option value="<%= d.id %>"><%= d.name %></option>
                  <% end %>
                </select>
              </div>
          <% else %>
              <input type="hidden" name="day_care_center" id="day_care_center" value="<%= @day_care_center_id %>">
          <% end  %>

            <div class="form-group">
                <label for="due_date">Due Date  <span>*</span></label>
                <div class="clearfix">
                    <div class="input-group pull-left due_date"  style="width: 58%; margin-right: 2%">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" name="due_date" id="due_date">
                    </div>

                    <div class="input-group  pull-left clockpicker" data-autoclose="true" style="width: 40%">
                        <input type="text" class="form-control" name="due_date_time" id="due_date_time">
                        <span class="input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </span>
                    </div>
                </div>
            </div>

            <div class=" form-group">
                <label for="reminder_date">Reminder Date</label>
                <div class="clearfix">
                    <div class="input-group pull-left reminderDate" style="width: 58%; margin-right: 2%">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" name="reminder_date" id="reminder_date">
                    </div>

                    <div class="input-group  pull-left clockpicker" data-autoclose="true" style="width: 40%">
                        <input type="text" class="form-control" name="reminder_date_time" id="reminder_date_time">
                        <span class="input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
          <div class="text-center">
            <div class="btnLoaderWrap" id="notificationFormSubmitBtn">
              <button type="submit" class="btn btn-primary submitButton">Add Notification</button>
              <div class="btnLoader">
                <div class="sk-spinner sk-spinner-three-bounce">
                  <div class="sk-bounce1"></div>
                  <div class="sk-bounce2"></div>
                  <div class="sk-bounce3"></div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>